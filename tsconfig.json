{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "noImplicitAny": false,
    "target": "es5",
    "strict": true,
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "lib": ["es5", "es6", "es7"]
  },
  "exclude": [
        "node_modules",
        "**/*.test.ts",
        "dist",
    ]
}